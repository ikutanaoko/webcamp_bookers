<h1>Editing Book</h1>
<div class="main-content">
  <% if @book.errors.any? %>
    <div class="error-atention">
      <p class="error-massage"><%= @book.errors.count %>ã€€errors prohibited this book from being saved:</p>
      <ul class="error-list">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, size: 40 %>
    <h4>Body</h4>
    <%= f.text_area :body, size: "40x10" %>
  <div><%= f.submit 'Update Book' %></div>
  <% end %>

  <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
</div>