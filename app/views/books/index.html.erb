<h1>Books</h1>

<div class="main-content">
  <table>

    <thred>
      <tr>
        <th class="title">Title</th>
        <th class="body">Body</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thred>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><div class="title"><%= book.title %></div></td>
        <td><div class="body"><%= book.body %></div></td>
        <td class="link"><%= link_to "Show", book_path(book.id) %></td>
        <td class="link"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>

      </tr>
    <% end %>
    </tbody>

  </table>
  <h2>New book</h2>

  <% if @book.errors.any? %>
  　<div class="error-atention">
      <p class="error-massage"><%= @book.errors.count %>　errors prohibited this book from being saved:</p>
      <ul class="error-list">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, url: books_path, method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, size: 40 %>
    <h4>Body</h4>
    <%= f.text_area :body, size: "40x10" %>

    <div><%= f.submit 'Create Book' %></div>
  <% end %>

</div>